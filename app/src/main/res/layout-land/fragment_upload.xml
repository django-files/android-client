<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <LinearLayout
        android:id="@+id/left_layout"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:paddingStart="8dp"
        android:paddingEnd="4dp"
        android:gravity="bottom"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/content_layout"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout">
        <Button
            android:id="@+id/options_button"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:contentDescription="Settings"
            app:icon="@drawable/md_settings_24px"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
        <Button
            android:id="@+id/album_button"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:contentDescription="Albums"
            app:icon="@drawable/md_imagesmode_24px"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
        <Button
            android:id="@+id/open_button"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:contentDescription="@string/open"
            app:icon="@drawable/md_open_in_new_24px"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
        <Button
            android:id="@+id/share_button"
            android:layout_width="48dp"
            android:layout_height="72dp"
            android:contentDescription="@string/share"
            app:icon="@drawable/md_share_24px"
            app:iconSize="24dp"
            app:iconGravity="textStart"
            app:iconPadding="0dp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/content_layout"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:padding="4dp"
        android:gravity="top"
        android:orientation="vertical"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toEndOf="@+id/left_layout"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toTopOf="@+id/bottom_layout">
        <FrameLayout
            android:id="@+id/image_holder"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:padding="4dp"
            android:background="@drawable/edit_text_border"
            android:visibility="gone"
            tools:visibility="visible">
            <ImageView
                android:id="@+id/image_preview"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:contentDescription="@string/preview"
                android:scaleType="fitCenter" />
            <TextView
                android:id="@+id/image_overlay_text"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center_horizontal"
                android:textAppearance="@style/TextAppearance.AppCompat.Large"
                android:background="@android:color/transparent"
                android:visibility="gone"
                tools:visibility="visible"
                android:text="text/comma-separated-values" />
        </FrameLayout>
        <androidx.media3.ui.PlayerView
            android:id="@+id/player_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="gone"
            app:show_buffering="always"
            app:show_shuffle_button="false"
            app:resize_mode="fit"
            tools:visibility="gone" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/bottom_layout"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingHorizontal="8dp"
        android:orientation="horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="parent">

        <Button
            android:id="@+id/upload_button"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            android:text="@string/upload_file"
            app:icon="@drawable/md_upload_24px"
            app:iconGravity="end"
            app:iconSize="28dp" />

        <EditText
            android:id="@+id/file_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:autofillHints="File Name"
            android:ellipsize="end"
            android:gravity="center"
            android:hint="@string/file_name"
            android:inputType="textNoSuggestions"
            android:maxLines="1"
            android:singleLine="true"
            android:textAlignment="center"
            android:textAppearance="@style/TextAppearance.AppCompat.Large"
            tools:text="test_file.jpg" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>
